{
  "name": "botframework-webchat-core",
  "version": "0.0.0-0",
  "description": "Core of botframework-webchat",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "author": "Microsoft Corporation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/BotFramework-WebChat.git"
  },
  "bugs": {
    "url": "https://github.com/microsoft/BotFramework-WebChat/issues"
  },
  "homepage": "https://github.com/microsoft/BotFramework-WebChat/packages/core#readme",
  "scripts": {
    "eslint": "eslint src/**/*.js src/**/*.ts --ignore-pattern *.spec.[jt]sx? --ignore-pattern *.test.[jt]sx? --ignore-pattern __tests__",
    "prepublishOnly": "npm run prepublishOnly:typescript && npm run prepublishOnly:babel",
    "prepublishOnly:babel": "babel src --extensions .js,.ts,.tsx --ignore **/*.spec.js,**/*.spec.ts,**/*.spec.tsx,**/*.test.js,**/*.test.ts,**/*.test.tsx,__tests__/**/*.js,__tests__/**/*.ts,__tests__/**/*.tsx --out-dir lib --verbose",
    "prepublishOnly:typescript": "tsc --project src/tsconfig.json",
    "prestart": "npm run prepublishOnly:babel",
    "start": "npm run start:babel && concurrently --kill-others --names \"babel,tsc\" \"npm run start:babel:watch\" \"npm run start:typescript\"",
    "start:babel": "cross-env node_env=test npm run prepublishOnly:babel --",
    "start:babel:watch": "cross-env node_env=test npm run start:babel -- --skip-initial-build --watch",
    "start:typescript": "cross-env node_env=test npm run prepublishOnly:typescript -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.7.4",
    "@types/node": "^12.12.18",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "botframework-directlinejs": "^0.11.6",
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.19.1",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.6",
    "jsonwebtoken": "^8.5.1",
    "math-random": "^1.0.4",
    "mime": "2.4.4",
    "redux": "^4.0.4",
    "redux-saga": "1.1.1",
    "simple-update-in": "^2.1.1"
  }
}
